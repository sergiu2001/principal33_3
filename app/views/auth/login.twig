{% extends 'templates/app.twig' %}
{% block content %}
    <link rel="stylesheet" href="formstyle.css">
    <div class="form__wrapper">
        <h1>Login</h1>
        <form action="{{ route('login.store') }}" method="post" enctype="multipart/form-data">
            <input type="hidden" name="{{ constant('SESSION_KEY', csrf) }}" value="{{ csrf.token }}">
            <div class="form__field">
                <input id="email" value="{{ old.email }}" name="email" type="email" autocomplete="email">
                <span></span>
                <label for="email">Email</label>
                {% if errors.email %}
                    <p class="text-red-500 text-xs mt-2">{{ errors.email | first }}</p>
                {% endif %}
            </div>
            <div class="form__field">
                <input id="password" name="password" type="password" autocomplete="current-password">
                <span></span>
                <label for="password">Password</label>
                {% if errors.password %}
                    <p class="text-red-500 text-xs mt-2">{{ errors.password | first }}</p>
                {% endif %}
            </div>
            <div class="flex items-center justify-between">
                <div>
                    <input id="remember" name="remember" type="checkbox">
                    <label for="remember"> Remember me </label>
                </div>
            </div>
            <input class="form__button" type="submit" value="Submit">
        </form>
    </div>
{% endblock %}