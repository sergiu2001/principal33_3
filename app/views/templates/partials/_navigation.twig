<link rel="stylesheet" href="headerstyle.css">
<header class="header__wrapper">
    <h1><a href="{{ route('home') }}">Calendar</a></h1>
    <nav>
        <ul>
            {% if auth.check %}
                <li>
                    <a class="nav__link" href="{{ route('login') }}">Create reservation</a>
                </li>
                <li>
                    <a class="nav__link" href="#"
                       onclick="event.preventDefault(); document.getElementById('logout').submit()">
                        Logout
                    </a>
                </li>
                <li class="nav__name">
                    <span>{{ auth.user.name }}</span>
                </li>
            {% else %}
                <li>
                    <a class="nav__link" href="{{ route('login') }}">Login</a>
                </li>
                <li>
                    <a class="nav__link" href="{{ route('register') }}">Register</a>
                </li>
            {% endif %}
        </ul>
    </nav>

    <form action="{{ route('logout') }}" method="POST" class="hidden" id="logout">
        <input type="hidden" name="{{ constant('SESSION_KEY', csrf) }}" value="{{ csrf.token }}">
    </form>
</header>